<?xml version="1.0" encoding="utf-8"?>
<!-- FILENAME: MainWindow.xaml -->
<Window
    x:Class="DzikirCounter.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DzikirCounter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    Title="Dzikir Counter Utility"
    x:Name="RootWindow"
    x:DataType="local:MainWindow">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.Resources>
            <!-- Define Converter Here so Binding can find it -->
            <local:BoolNegationConverter x:Key="BoolNegationConverter"/>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="*"/>
            <!-- Content (Pivot) -->
        </Grid.RowDefinitions>

        <!-- TITLE (Always Visible) -->
        <TextBlock Grid.Row="0"
            Text="Dzikir Counter Utility" 
            Style="{StaticResource SubtitleTextBlockStyle}" 
            HorizontalAlignment="Center" 
            Foreground="{ThemeResource SystemAccentColor}"
            Margin="0,15,0,5"/>

        <!-- PIVOT: Separates Counter, Timer, and Settings -->
        <Pivot Grid.Row="1">

            <!-- TAB 1: COUNTER -->
            <PivotItem Header="Counter">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="10" Padding="15,0,15,15">

                        <!-- GOAL SETTING SECTION -->
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="10">
                            <StackPanel VerticalAlignment="Top" Spacing="8">
                                <ComboBox 
                                    Header="Select Target Goal"
                                    PlaceholderText="Choose a Preset..."
                                    ItemsSource="{x:Bind ViewModel.DzikirPresets}" 
                                    SelectedItem="{x:Bind ViewModel.SelectedPreset, Mode=TwoWay}"
                                    HorizontalAlignment="Stretch"/>

                                <controls:NumberBox
                                    Header="Custom Target"
                                    Value="{x:Bind ViewModel.TargetCount, Mode=TwoWay}"
                                    Visibility="{x:Bind ViewModel.IsCustomTargetVisible, Mode=OneWay}"
                                    SpinButtonPlacementMode="Inline"
                                    Minimum="0"
                                    HorizontalAlignment="Stretch"/>

                                <StackPanel Spacing="5" Visibility="{x:Bind ViewModel.IsTargetVisible, Mode=OneWay}">
                                    <ProgressBar 
                                        Value="{x:Bind ViewModel.TargetProgress, Mode=OneWay}" 
                                        Maximum="{x:Bind ViewModel.TargetCount, Mode=OneWay}"
                                        HorizontalAlignment="Stretch" 
                                        Height="10"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="5">
                                        <TextBlock Text="Goal:" FontSize="12" Opacity="0.6" Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
                                        <TextBlock Text="{x:Bind ViewModel.TargetDisplay, Mode=OneWay}" FontSize="12" FontWeight="Bold" Opacity="0.6" Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- COUNTER DISPLAY -->
                        <TextBlock 
                            Text="{x:Bind ViewModel.CurrentCount, Mode=OneWay}" 
                            FontSize="90" 
                            FontWeight="ExtraBold" 
                            HorizontalAlignment="Center" 
                            Foreground="{x:Bind ViewModel.CounterColor, Mode=OneWay}"
                            Margin="0,10,0,10"/>

                        <!-- CONTROL BUTTONS -->
                        <Grid ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" HorizontalAlignment="Stretch" Background="#EF5350" Foreground="White" FontSize="16" Height="50" Click="DecreaseButton_Click">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="âˆ’" FontWeight="Bold"/>
                                    <TextBlock Text="Decrease"/>
                                </StackPanel>
                            </Button>
                            <Button Grid.Column="1" HorizontalAlignment="Stretch" Background="#66BB6A" Foreground="White" FontSize="16" Height="50" Click="IncreaseButton_Click">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="+" FontWeight="Bold"/>
                                    <TextBlock Text="Increase"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <Grid ColumnSpacing="10" Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" HorizontalAlignment="Stretch" Style="{StaticResource AccentButtonStyle}" Click="ResetButton_Click">
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="â†º"/>
                                    <TextBlock Text="Reset Count"/>
                                </StackPanel>
                            </Button>
                            <Button Grid.Column="1" HorizontalAlignment="Stretch" Click="SaveButton_Click">
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="ðŸ’¾"/>
                                    <TextBlock Text="Save"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>

            <!-- TAB 2: TIMER -->
            <PivotItem Header="Timer">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20">
                    <TextBlock Text="Session Duration" FontSize="14" Opacity="0.6" HorizontalAlignment="Center" Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"/>

                    <TextBlock 
                        Text="{x:Bind ViewModel.TimerDisplay, Mode=OneWay}" 
                        FontSize="72" 
                        FontWeight="Light" 
                        HorizontalAlignment="Center" 
                        Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"/>

                    <StackPanel Orientation="Horizontal" Spacing="15" HorizontalAlignment="Center">
                        <!-- Fix: Use {Binding} instead of x:Bind for Converter compatibility in Window -->
                        <Button Click="{x:Bind ViewModel.StartTimer}" IsEnabled="{Binding IsTimerRunning, Converter={StaticResource BoolNegationConverter}}" Width="80" Height="40" Background="#4CAF50" Foreground="White">
                            <SymbolIcon Symbol="Play"/>
                        </Button>
                        <Button Click="{x:Bind ViewModel.PauseTimer}" IsEnabled="{x:Bind ViewModel.IsTimerRunning, Mode=OneWay}" Width="80" Height="40" Background="#FFB74D" Foreground="White">
                            <SymbolIcon Symbol="Pause"/>
                        </Button>
                        <Button Click="{x:Bind ViewModel.ResetTimer}" Width="80" Height="40" Background="#EF5350" Foreground="White">
                            <SymbolIcon Symbol="Stop"/>
                        </Button>
                    </StackPanel>

                    <TextBlock Text="Timer will automatically pause when you reach your Dzikir goal." TextWrapping="Wrap" MaxWidth="250" TextAlignment="Center" FontSize="12" Opacity="0.5" Margin="0,20,0,0"/>
                </StackPanel>
            </PivotItem>

            <!-- TAB 3: SETTINGS -->
            <PivotItem Header="Settings">
                <ScrollViewer>
                    <StackPanel Spacing="15" Padding="15,0,15,15">

                        <TextBlock Text="Customization" FontWeight="Bold" Foreground="{ThemeResource SystemAccentColor}"/>

                        <!-- Theme Toggle -->
                        <controls:ToggleSwitch x:Name="ThemeToggle" HorizontalAlignment="Stretch" Toggled="ThemeToggle_Toggled">
                            <controls:ToggleSwitch.Header>
                                <TextBlock Text="App Theme" FontWeight="SemiBold"/>
                            </controls:ToggleSwitch.Header>
                            <controls:ToggleSwitch.OnContent>
                                <TextBlock Text="Dark Mode" FontSize="12"/>
                            </controls:ToggleSwitch.OnContent>
                            <controls:ToggleSwitch.OffContent>
                                <TextBlock Text="Light Mode" FontSize="12"/>
                            </controls:ToggleSwitch.OffContent>
                        </controls:ToggleSwitch>

                        <!-- Audio Toggle -->
                        <controls:ToggleSwitch IsOn="{x:Bind ViewModel.IsSoundEnabled, Mode=TwoWay}" HorizontalAlignment="Stretch">
                            <controls:ToggleSwitch.Header>
                                <TextBlock Text="Sound Effects" FontWeight="SemiBold"/>
                            </controls:ToggleSwitch.Header>
                            <controls:ToggleSwitch.OnContent>
                                <TextBlock Text="On (Pop &amp; Success)" FontSize="12"/>
                            </controls:ToggleSwitch.OnContent>
                            <controls:ToggleSwitch.OffContent>
                                <TextBlock Text="Off" FontSize="12"/>
                            </controls:ToggleSwitch.OffContent>
                        </controls:ToggleSwitch>

                        <Rectangle Height="1" Fill="{ThemeResource SystemControlBackgroundBaseLowBrush}" Margin="0,10"/>

                        <TextBlock Text="Global Input Hooks" FontWeight="Bold" Foreground="{ThemeResource SystemAccentColor}"/>
                        <TextBlock Text="Count while this app is in the background." FontSize="11" Opacity="0.6"/>

                        <!-- Toggle 1: XButtons -->
                        <controls:ToggleSwitch x:Name="XButtonHookToggle" FontWeight="SemiBold" IsOn="{x:Bind ViewModel.IsHookEnabled, Mode=TwoWay}" Toggled="XButtonHookToggle_Toggled" HorizontalAlignment="Stretch">
                            <controls:ToggleSwitch.Header>
                                <TextBlock Text="Side Mouse Buttons" />
                            </controls:ToggleSwitch.Header>
                            <controls:ToggleSwitch.OnContent>
                                <TextBlock Text="Active" FontSize="12" Foreground="#4CAF50"/>
                            </controls:ToggleSwitch.OnContent>
                            <controls:ToggleSwitch.OffContent>
                                <TextBlock Text="Inactive" FontSize="12"/>
                            </controls:ToggleSwitch.OffContent>
                        </controls:ToggleSwitch>

                        <!-- Toggle 2: LButton -->
                        <controls:ToggleSwitch x:Name="LButtonHookToggle" FontWeight="SemiBold" IsOn="{x:Bind ViewModel.IsLButtonHookEnabled, Mode=TwoWay}" Toggled="LButtonHookToggle_Toggled" HorizontalAlignment="Stretch">
                            <controls:ToggleSwitch.Header>
                                <TextBlock Text="Left Mouse Click" />
                            </controls:ToggleSwitch.Header>
                            <controls:ToggleSwitch.OnContent>
                                <TextBlock Text="Active" FontSize="12" Foreground="#4CAF50"/>
                            </controls:ToggleSwitch.OnContent>
                            <controls:ToggleSwitch.OffContent>
                                <TextBlock Text="Inactive" FontSize="12"/>
                            </controls:ToggleSwitch.OffContent>
                        </controls:ToggleSwitch>

                        <!-- Toggle 3: Custom Input -->
                        <StackPanel Spacing="5">
                            <controls:ToggleSwitch x:Name="CustomHookToggle" FontWeight="SemiBold" IsOn="{x:Bind ViewModel.IsCustomInputEnabled, Mode=TwoWay}" Toggled="CustomHookToggle_Toggled" HorizontalAlignment="Stretch">
                                <controls:ToggleSwitch.Header>
                                    <TextBlock Text="Custom Key Binding" />
                                </controls:ToggleSwitch.Header>
                                <controls:ToggleSwitch.OnContent>
                                    <TextBlock Text="Active" FontSize="12" Foreground="#4CAF50"/>
                                </controls:ToggleSwitch.OnContent>
                                <controls:ToggleSwitch.OffContent>
                                    <TextBlock Text="Inactive" FontSize="12"/>
                                </controls:ToggleSwitch.OffContent>
                            </controls:ToggleSwitch>

                            <Button x:Name="RecordButton" HorizontalAlignment="Stretch" Click="RecordCustomInput_Click" Height="32" BorderBrush="{ThemeResource SystemControlBackgroundBaseMediumLowBrush}" BorderThickness="1">
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="âº" Foreground="Red" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="BoundKeyText" Text="{x:Bind ViewModel.CustomInputNameDisplay, Mode=OneWay}" FontSize="12" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="InstructionText" Text="Press key/click to bind..." FontSize="12" FontWeight="Bold" Visibility="Collapsed" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>
            </PivotItem>
        </Pivot>
    </Grid>
</Window>